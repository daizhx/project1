<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        
    	<android.support.v4.view.ViewPager
        	android:id="@+id/title_viewPager"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent">
    	</android.support.v4.view.ViewPager>
    	
    	<RelativeLayout android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="bottom"
    	    android:layout_marginBottom="5dp"
    	    >
    	    <ImageView android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentRight="true"
    	        android:layout_marginRight="5dp"
    	        android:src="@drawable/page_ind"
    	        android:id="@+id/ind3"/>
    	    <ImageView android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:id="@+id/ind2"
    	        android:src="@drawable/page_ind"
    	        android:layout_toLeftOf="@+id/ind3"
    	        android:layout_marginRight="5dp"/>
    	    <ImageView android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_toLeftOf="@+id/ind2"
    	        android:layout_marginRight="5dp"
    	        android:src="@drawable/page_ind_selected"
    	        android:id="@+id/ind1"/>
    	</RelativeLayout>
	</FrameLayout>
    <LinearLayout android:id="@+id/middle_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/top_area"
        >
    	
        <ImageView android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/news_bar"/>
         
        <!-- API 11 -->
        <!--
        <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
         -->
        <FrameLayout android:id="@+id/date_zone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/data_bg"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
    	    <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三月"
                android:textColor="@android:color/white"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textSize="20dp"
                android:textColor="@android:color/white"/>
            </LinearLayout>
        </FrameLayout>
        <TextView android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="hello test test test test test test test test test test test test test test" />
    </LinearLayout>

    <!-- API 14 -->
    <!--  
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/middle_area"
        android:columnCount="2"
        android:rowCount="2"
        android:id="@+id/bottom_area"
        
        >
        <ImageView android:id="@+id/img1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"/>
        <ImageView android:id="@+id/img2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"/>
        <ImageView android:id="@+id/img3"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/holo_blue_light"/>
        <ImageView android:id="@+id/img4"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/holo_red_light"/>
              
    </GridLayout>
-->
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/middle_area"
        android:id="@+id/divider"/>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF8F6"
    android:layout_below="@+id/divider">
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img1"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/massage"/>
        <View android:layout_width="1dp"
        	android:layout_height="match_parent"
        	android:background="@android:color/darker_gray"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img2"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/physical"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img3"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/health"/>
        <View android:layout_width="1dp"
        	android:layout_height="match_parent"
        	android:background="@android:color/darker_gray"/>
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img4"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/shop"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_bar"/>
</LinearLayout>

</RelativeLayout>