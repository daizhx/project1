<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:orientation="horizontal"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_marginTop="25dip">
    	<Button
	    	android:id="@+id/get_naevus_picture"
	    	android:layout_width="0dip"
	    	android:layout_height="wrap_content"
	    	android:textSize="13.0dip"
		    android:text="@string/get_naevus_picture"
		    android:layout_marginTop="2.0dip"
		    android:layout_marginBottom="2.0dip"
		    android:layout_marginLeft="5dip"
		    android:layout_marginRight="5dip"
		    android:paddingLeft="5dip"
		    android:paddingRight="5dip"
		    android:singleLine="true"
		    android:background="@drawable/android_big_button_x"
		    android:layout_weight="1"
		    android:textColor="#ffffff"
		    android:layout_gravity="center_vertical"
		    android:ellipsize="marquee"
		    android:marqueeRepeatLimit="marquee_forever"/>
		<Button 
		    android:id="@+id/ana_naevus_picture"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:textSize="13.0dip"
		    android:text="@string/analysis_naevus_picture"
		    android:layout_marginTop="2.0dip"
		    android:layout_marginBottom="2.0dip"
		    android:layout_marginLeft="5.0dip"
		    android:layout_marginRight="5dip"
		    android:paddingLeft="5dip"
		    android:paddingRight="5dip"
		    android:singleLine="true"
		    android:background="@drawable/android_big_button_x"
		    android:layout_weight="1"
		    android:textColor="#ffffff"
		    android:layout_gravity="center_vertical"
		    android:ellipsize="marquee"
		    android:marqueeRepeatLimit="marquee_forever"/>	
	</LinearLayout>
	
	<ImageView
		android:id="@+id/naevus_picture"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="30.0dip"
		android:layout_marginBottom="30.0dip"
		android:layout_marginLeft="35.0dip"
		android:layout_marginRight="35.0dip"
		android:gravity="center_horizontal"
		android:background="#ffa0a0a0"/>

</LinearLayout>
