<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="140dip"
  android:layout_marginLeft="10dip"
  android:layout_marginRight="10dip"
  android:background="@drawable/alertbg">
  	<LinearLayout android:id="@+id/preid"
  	android:layout_width="fill_parent"
  	android:layout_height="130dip"
  	android:orientation="vertical"
  	android:layout_alignParentTop="true">
  		<View android:layout_width="fill_parent"
	    android:layout_height="15dip"/><LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    	<TextView android:layout_width="0dip"
	    	android:layout_height="wrap_content"
	    	android:text="@string/verifiedPrompt"
	    	android:textColor="#00ffff"
	    	android:layout_weight="1"
	    	android:layout_marginLeft="10dip"
	    	android:textSize="15dip"
	    	android:singleLine="true"/>
	    	<EditText android:id="@+id/getnum"
	    	android:layout_width="0dip"
	    	android:layout_height="wrap_content"
	    	android:hint="@string/enternum"
	    	android:textColor="#00ffff"
	    	android:textColorHint="#00ffff"
	    	android:layout_weight="2"
	    	android:background="@drawable/edit_text_x"
	    	android:gravity="center_vertical"
	    	android:inputType="number"
	    	android:singleLine="true"
	    	android:layout_marginRight="10dip"
	    	android:textSize="15dip"/>
	    </LinearLayout>
	    <View android:layout_width="fill_parent"
	    android:layout_height="10dip"/>
  	</LinearLayout>
  	<LinearLayout android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:gravity="center_horizontal"
  	android:layout_alignParentBottom="true"
  	android:layout_marginBottom="10dip">
  		<Button android:id="@+id/mybtn"
  		android:layout_width="0dip"
  		android:layout_height="wrap_content"
  		android:paddingLeft="35dip"
  		android:paddingRight="35dip"
  		android:text="@string/ok"
  		android:background="@drawable/android_big_button_x"
  		android:textColor="#ffffff"
  		android:textSize="18dip"
  		android:layout_weight="1"
  		android:layout_marginLeft="5dip"
  		android:enabled="false"/>
  		<View android:layout_width="15dip"
  		android:layout_height="1dip"/>

  		<Button
  		    android:id="@+id/mybtnCancle"
  		    android:layout_width="0dip"
  		    android:layout_height="wrap_content"
  		    android:layout_marginRight="5dip"
  		    android:layout_weight="1"
  		    android:background="@drawable/android_big_button_x"
  		    android:paddingLeft="35dip"
  		    android:paddingRight="35dip"
  		    android:text="@string/cancel"
  		    android:textColor="#ffffff"
  		    android:textSize="18dip" />

  	</LinearLayout>
</RelativeLayout>
