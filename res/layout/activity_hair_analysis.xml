<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    
    <FrameLayout android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        >
        <com.hengxuan.ehealthplatform.lens.hair.HairView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/filter"/>
        
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/half_translucent"
            android:id="@+id/menu">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv1"
                android:text="@string/hair_water_analysis"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_centerVertical="true"
                />
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv2"
                android:textColor="@color/white"
                android:text="@string/hair_gloss_analysis"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/tv1"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv3"
                android:textColor="@color/white"
                android:text="@string/elastic"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/tv2"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv4"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="@string/hair_detection"
                android:layout_toRightOf="@+id/tv3"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
        </RelativeLayout>
    </FrameLayout>
    

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_dark"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chacha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/chacha" />

        <Button
            android:id="@+id/analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/analysis_text"
            android:background="@drawable/ic_bg_selector" />

        <ImageView
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/reset"
            />
    </LinearLayout>

</RelativeLayout>