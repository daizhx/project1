<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  android:layout_width="fill_parent" android:layout_height="65dip"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/titlebg"
  android:gravity="center_vertical">
  
    <TextView     
    android:id="@+id/titleText2" 
    android:padding="10.0dip" 
    android:singleLine="true" 
    android:layout_weight="1.0" 
    style="@style/layout_title2"
    android:layout_centerInParent="true"
    android:layout_marginTop="5dip"
    android:text="@null"/>
    <Button android:id="@+id/swich_btn"
    android:layout_width="50dip"
    android:layout_height="30dip"
    android:background="@drawable/back"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@+id/titleText2"
    android:layout_marginRight="5dip"/>
    <Button android:id="@+id/nextbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/android_big_button_x"
    android:layout_alignParentRight="true"
    android:textColor="#ffffff"
    android:textSize="11dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:visibility="gone"/>
</RelativeLayout>
